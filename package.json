{
  "name": "@linode/apl-k8s-operator",
  "version": "0.2.2",
  "description": "Build Kubernetes operators in NodeJS (and TypeScript)",
  "repository": {
    "type": "git",
    "url": "https://github.com/linode/apl-k8s-operator-node"
  },
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "*.md"
  ],
  "license": "Apache-2.0",
  "main": "dist/operator.js",
  "types": "dist/operator.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.2.0",
    "async": "^3.2.6",
    "gaxios": "^6.7.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/byline": "^4.2.36",
    "@types/js-yaml": "^4.0.9",
    "@types/node": ">=20.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.27.0",
    "mkdirp": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "lint": "eslint ./src ./*.ts",
    "clean": "rm -Rf node_modules/ dist/",
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "rm -Rf dist/ && npm run build",
    "build:package": "bin/generate-package.sh",
    "publish:package": "bin/publish-package.sh"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "operator"
  ],
  "overrides": {
    "request": "npm:@cypress/request@^3.0.1"
  }
}
